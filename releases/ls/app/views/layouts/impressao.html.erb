   <body>
      <%= yield %>
      
      <script language="javascript">
        tab1     = '<table border="1" width="100%" cellSpacing="0" cellPadding="3"><tr><td><font size=1>';
        tab1_min = '<table border="1" width="100%" cellSpacing="0" cellPadding="3"><tr><td><font size=1>';
        tab2     = '</font></td></tr></table>';

        var tabelas = document.getElementsByName("value");
        for ( var i = 0; i < tabelas.length; i++ ){
          value=tabelas[i].innerHTML;
          tabelas[i].innerHTML=tab1+value+tab2;
        }

        var tabelas_min = document.getElementsByName("value_min");
        for ( var i = 0; i < tabelas.length; i++ ){
          value=tabelas_min[i].innerHTML;
          tabelas_min[i].innerHTML=tab1_min+value+tab2;
        }
        window.print();
      </script>
   </body>
