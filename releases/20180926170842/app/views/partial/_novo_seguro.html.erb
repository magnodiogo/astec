               <%= link_to 'Estou ciente, Continuar.', {:action => :new, :tipo => 'R', :mes => params[:mes]}, :class => "button small nice blue radius" %>
             <% else %>
               <%= link_to 'Estou ciente, Continuar.', {:action => :new, :mes => params[:mes]}, :class => "button small nice blue radius" %>
             <% end %>
           </div>
           <div class='six columns'>
             <%= link_to 'Voltar', 'javascript:retorna()', :class => "button small nice blue radius" %>        
