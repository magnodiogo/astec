<% is_show = ( action_name == 'show' ) %>
<!-- RESIDENCIA ATUAL -->
<div class="formRow" style='padding: 0'></div>
<!-- LINHA 1 -->
<div class="formRow" style='padding: 0'>
  <div class='person_text_small seguros' style='width: 31%'>
    <%= f.label :residencia_tipo, "Tipo:" %>
    <%= f.select :residencia_tipo, options_sexo, { }, :class => "input-text big", :disabled => is_show, :required => true %>
  </div>
  <div class='person_text_small seguros' style='width: 31%'>
    <%= f.label :residencia_tempo_ano, "Tempo de Residência ( Anos ):" %>
    <%= f.text_field :residencia_tempo_ano, :class => "input-text big", :readonly => is_show, :required => true %>
  </div>
  <div class='person_text_small seguros' style='width: 31%'>
    <%= f.label :residencia_tempo_mes, "Tempo de Residência ( Meses ):" %>
    <%= f.text_field :residencia_tempo_mes, :class => "input-text big", :readonly => is_show, :required => true %>
  </div>
</div>
<!-- LINHA 2 e 3 -->
<div class="formRow double" style='padding: 0'>
  <div class='person_text_very_small seguros'>
    <%= f.label :residencia_cep, "CEP:" %>
    <div style='margin-top: 2px'>
      <% if @cep  %>
        <%= f.text_field :residencia_cep, :maxlength => 9, :class => "input-text big", :readonly => is_show, :required => true, :style=>'width: 74%; float: left' %>
      <% else %>
        <%= f.text_field :residencia_cep, :maxlength => 9, :class => "input-text big", :readonly => is_show, :required => true, :style=>'width: 74%; float: left' %>
      <% end %>
      <% unless is_show %>
        <a href="/ceps/search_cep?tipo=<%= params[:tipo] %>&mes=<%= params[:mes]%>&renovacao=<%= params[:renovacao] %>" style='float: left'>
          <img style="margin: 2px 0 0 5px" src="/img/ico/search-icon24.png" />
        </a>
      <% end %>
    </div>
  </div>
  <div id='div_endereco_residencia'>
    <div class='person_text_small seguros'>
      <%= label_tag :endereco, "Endereço do Imóvel Locado:" %>
      <%= text_field_tag :endereco, @cep  ? @cep.endereco : nil, :class => "input-text nineeight-width", :readonly => true %>
    </div>

    <div class='person_text_very_small seguros'>
      <%= label_tag :bairro, "Bairro:" %>  
      <%= text_field_tag :bairro, @cep ? @cep.bairro.nome : nil, :class => "input-text big", :readonly => true %>
    </div>   
    <div class='person_text_very_small seguros'>
      <%= label :cidade, "Cidade:" %>
      <%= text_field_tag :cidade, @cep ? @cep.cidade : nil, :class => "input-text big", :readonly => true %>
    </div>   
    <div class='person_text_very_small seguros' style='width: 9.5%'>
      <%= label_tag :uf, "UF:" %>
      <%= text_field_tag :uf, @cep ? @cep.uf : nil , :class => "input-text big", :maxlength => 2, :readonly => true %>
    </div>   
  </div>
  <div class='person_text_very_small  seguros'  style='width: 9.5%'>
    <%= f.label :residencia_numero, "Número:" %>
    <% if @cep %>
       <%= f.text_field :residencia_numero, :maxlength => 6,  :class => "input-text big", :readonly => is_show, :required => true %>
    <% else %>
       <%= f.text_field :residencia_numero, :maxlength => 6,  :class => "input-text big", :readonly => is_show, :required => true %>
    <% end %>
  </div>   
  <div class='person_text_very_small seguros' style='width: 27.5%'>
    <%= f.label :residencia_complemento, "Complemento:" %>
    <%= f.text_field :residencia_complemento, :maxlength => 15, :class => "input-text nineseven-width", :readonly => is_show %>
  </div>   
  <div class='person_text_small seguros' style='width: 4.5%'>
    <%= f.label :residencia_ddd_fixo, "DDD:" %>
    <%= f.text_field :residencia_ddd_fixo, :class => "input-text big", :readonly => is_show, :required => true %>
  </div>
  <div class='person_text_small seguros' style='width: 18.4%'>
    <%= f.label :residencia_telefone_fixo, "Telefone Fixo:" %>
    <%= f.text_field :residencia_telefone_fixo, :class => "input-text big", :readonly => is_show, :required => true %>
  </div>
  <div class='person_text_small seguros' style='width: 4.5%'>
    <%= f.label :residencia_ddd_celular, "DDD:" %>
    <%= f.text_field :residencia_ddd_celular, :class => "input-text big", :readonly => is_show, :required => true %>
  </div>
  <div class='person_text_small seguros' style='width: 18.4%'>
    <%= f.label :residencia_celular, "Celular:" %>
    <%= f.text_field :residencia_celular, :class => "input-text big", :readonly => is_show, :required => true %>
  </div>
</div>
<!-- LINHA 4 -->
<div class="formRow" style='padding: 0'>
  <div class='person_text_small seguros' style='width: 69.5%'>
    <%= f.label :residencia_nome_proprietario, "Nome do Proprietário:" %>
    <%= f.text_field :residencia_nome_proprietario, :class => "input-text ninenine-width", :readonly => is_show, :required => true %>
  </div>
  <div class='person_text_small seguros' style='width: 4.5%'>
    <%= f.label :residencia_ddd_proprietario, "DDD:" %>
    <%= f.text_field :residencia_ddd_proprietario, :class => "input-text big", :readonly => is_show, :required => true %>
  </div>
  <div class='person_text_small seguros' style='width: 18.4%'>
    <%= f.label :residencia_telefone_proprietario, "Telefone:" %>
    <%= f.text_field :residencia_telefone_proprietario, :class => "input-text big", :readonly => is_show, :required => true %>
  </div>
</div>
<!-- LINHA 5 -->
<div class="formRow" style='padding: 0'>
  <div class='person_text_small seguros' style='width: 97%'>
    <%= f.label :residencia_correspondencia, "Este é o endereço de correspôndencia ?" %>
     <p>Caso negativo, preencha os campos do endereço a seguir. Caso positivo passe para o preenchimento do campo "Residência Atual".</p>
  </div>
</div>