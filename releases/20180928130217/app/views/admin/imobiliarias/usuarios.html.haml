- model_class = User
.row.grid
  .col-md-12
    = flash_message
    .panel.panel-piluku
      .panel-heading
        %h3.panel-title
          = t('.title', model: model_class.model_name.human.titleize)
          = " - Imobili√°ria: #{@imobiliaria.nome_fantasia}"
          .right-button
            - if @imobiliaria
              = link_to t('.new', default: t("helpers.links.new")), new_imob_usuario_registration_path(@imobiliaria.id), class: 'btn btn-info'
            - else
              = link_to t('.new', default: t("helpers.links.new")), new_user_registration_path, class: 'btn btn-wtc'
      = render "users/listagem"
