<div class="container">
  <div class="row">
    <div class="twelve columns">
      <div class="box_c">
        <div class="box_c_heading cf box_actions">
          <p>Consultar CEPs</p>
        </div>
        <div class="box_c_content" style='min-height: 145px'>
          <%= form_tag( titulo_search_cep_ceps_path, :method => :post, :class => "nice custom") %>
            <center><%= flash_message %></center>
            <div class="twelve columns">
              <div class="formRow">
                <%= hidden_field_tag :mes, @mes %>
                <%= hidden_field_tag :tipo, @tipo  %>
                <%= hidden_field_tag :renovacao, params[:renovacao]  %>

                <div class='person_text_very_small' style='width: 9%'>
                  <%= label_tag :uf, "UF: " %>
                  <%= select_tag :uf, options_for_select(@ufs), :class => "input-text big" %>
                </div>

                <div class='person_text_very_small' id='div_cidade'>
                  <%= label_tag :cidade, "Cidade: " %>
                  <%= select_tag :cidade, options_for_select(@cidades), :class => "input-text big" %>
                </div>
                
                <div class='person_text' style='width: 39%'>
                  <%= label_tag :endereco, "Endereço: " %>
                  <%= text_field_tag :endereco, params[:endereco], :class => "input-text big"%>
                </div>
                
              </div>
            </div>
            <div class="eleven columns"> <hr/> </div>

            <div class="right" style='margin-right: 40px'>
              <%= submit_tag "Consultar", :class => "button small nice blue radius"%>
            </div>
            <div class="six columns" >
              <% if current_user.master and current_user.imobiliaria_id.nil? %>
                 <%= link_to "Voltar", ceps_path , :class => "button small nice blue radius"%>
              <% else %>
                 <%= link_to "Voltar", {:controller => :seguros, :action => :new, :tipo => params[:tipo], :renovacao => params[:renovacao], :mes => params[:mes] }, :class => "button small nice blue radius"%>
              <% end %>
            </div>
          </form>
        </div> 
      </div>
    </div>
  </div>

</div>

<% if @ceps and @ceps.any? %>
  <div class="container">
    <div class="row">
      <div class="twelve columns">
        <div class="box_c">
          <div class="box_c_heading cf box_actions">
              <p>Resultado da Consulta</p>
          </div>
          <div class="box_c_content">
            <table cellpadding="0" cellspacing="0" border="0" class="display mobile_dt1 dt_act" id="dt1">
              <thead>
                <tr>
                  <th>CEP</th>
                  <th>Endereço</th>
                  <th>Complemento</th>
                  <th>Bairro</th>
                  <th>Cidade</th>
                  <th>UF</th>
                  <th colspan=2>Opções</th>
                </tr>
              </thead>
              <tbody>
                <% @ceps.each do |cep| %>
                  <tr>
                    <td><%=h cep.cep %></td>
                    <td><%=h cep.endereco %></td>
                    <td><%=h cep.complemento %></td>
                    <td><%=h cep.nome_bairro %></td>
                    <td><%=h cep.cidade %></td>
                    <td><%=h cep.uf %></td>
                    <td><%= link_to image_tag('/img/ico/confirm.png', :title => 'Confirmar'), new_titulo_path(:cep => cep.cep) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
